{
  "name": "docs-db-server",
  "version": "0.0.0",
  "description": "REST server with with fastify v2 and docs-db, a docs database with history support.",
  "main": "index.js",
  "bin": "server.js",
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "deps": "dependency-check . && dependency-check . --unused --no-dev",
    "start": "node server.js",
    "test": "nyc ava"
  },
  "repository": "millette/docs-db-server",
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": {
    "name": "Robin Millette",
    "email": "robin@millette.info",
    "url": "http://robin.millette.info"
  },
  "engines": {
    "node": ">= 10.14.2"
  },
  "license": "AGPL-3.0",
  "devDependencies": {
    "ava": "^1.2.0",
    "coveralls": "^3.0.2",
    "dependency-check": "^3.3.0",
    "got": "^9.6.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.1",
    "nyc": "^13.1.0",
    "prettier": "^1.16.2"
  },
  "dependencies": {
    "fastify": "^2.0.0-rc.4",
    "fastify-docs-db": "0.0.5"
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5",
    "arrowParens": "always"
  }
}
